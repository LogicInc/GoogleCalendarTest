<Window x:Class="CalendarTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Content="Add calendar event" Margin="10,10,0,0" VerticalAlignment="Top" Width="119" Click="AddCalendarEventClick"/>
            <Button Content="Add contact" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="AddContactClick"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" Margin="10,10,10,0">
                <Label>ClientId</Label>
                <TextBox x:Name="ClientIdTextBox" Width="440"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                <Label>ClientSecret</Label>
                <TextBox x:Name="ClientSecretTextBox" Width="417"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                <Label>User</Label>
                <TextBox x:Name="User" Width="417"></TextBox>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
